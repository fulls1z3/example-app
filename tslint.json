{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      [
        "ngx"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "app"
      ],
      "kebab-case"
    ],
    "use-view-encapsulation": false,
    "pipe-naming": [
      true,
      "camelCase",
      "ngx"
    ]
  }
}
