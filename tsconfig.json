{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": ["./.temp/**/*"],
  "exclude": [
    "node_modules",
    "src",
    ".temp/build/main*.ts",
    ".temp/build/**/*.spec.ts",
    ".temp/build/**/*.e2e.ts",
    ".temp/build/**/*.ngfactory.ts",
    ".temp/build/**/*.ngstyle.ts"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true,
    "useCache": true,
    "cacheDirectory": "./.temp/.awcache",
    "usePrecompiledFiles": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
